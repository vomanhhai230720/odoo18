<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_wallet_transaction_list" model="ir.ui.view">
            <field name="name">uni.wallet_transaction.list</field>
            <field name="model">uni.wallet_transaction</field>
            <field name="arch" type="xml">
                <list string="Wallet Transactions">
                    <field name="wallet_id"/>
                    <field name="partner_id"/>
                    <field name="amount"/>
                    <field name="status"/>
                    <field name="created_date"/>
                    <field name="note"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_wallet_transaction_form" model="ir.ui.view">
            <field name="name">uni.wallet_transaction.form</field>
            <field name="model">uni.wallet_transaction</field>
            <field name="arch" type="xml">
                <form string="Wallet Transaction">
                    <sheet>
                        <group>
                            <group>
                                <field name="wallet_id"/>
                                <field name="partner_id"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="status"/>
                                <field name="created_date"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_wallet_transaction" model="ir.actions.act_window">
            <field name="name">Wallet Transactions</field>
            <field name="res_model">uni.wallet_transaction</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first wallet transaction!
                </p>
            </field>
        </record>

        
    </data>
</odoo>
