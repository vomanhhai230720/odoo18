<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Tree View -->
    <record id="view_account_balance_tree" model="ir.ui.view">
      <field name="name">uni.invest.account.balance.tree</field>
      <field name="model">uni.invest.account_balance</field>
      <field name="arch" type="xml">
        <list>
          <field name="user_id"/>
          <field name="amount"/>
          <field name="pending_amount_withdrawal_invest"/>
          <field name="pending_amount_withdrawal_profit"/>
          <field name="pending_amount"/>
          <field name="available_balance"/>
          <field name="status"/>
          <field name="currency_id"/>
          <field name="created_date_time"/>
          <field name="created_user_id"/>
          <field name="last_updated_date_time"/>
          <field name="last_updated_user"/>
        </list>
      </field>
    </record>

    <!-- Form View -->
    <record id="view_account_balance_form" model="ir.ui.view">
      <field name="name">uni.invest.account.balance.form</field>
      <field name="model">uni.invest.account_balance</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="user_id"/>
                <field name="amount"/>
                <field name="pending_amount_withdrawal_invest"/>
                <field name="pending_amount_withdrawal_profit"/>
                <field name="pending_amount"/>
                <field name="available_balance"/>
              </group>
              <group>
                <field name="status"/>
                <field name="currency_id"/>
                <field name="created_date_time" readonly="1"/>
                <field name="created_user_id" readonly="1"/>
                <field name="last_updated_date_time" readonly="1"/>
                <field name="last_updated_user" readonly="1"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action -->
    <record id="action_account_balance" model="ir.actions.act_window">
      <field name="name">Account Balance</field>
      <field name="res_model">uni.invest.account_balance</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <!-- <menuitem id="menu_account_balance"
              name="Account Balance"
              parent="aisqn_management.menu_root"
              action="action_account_balance"
              sequence="10"/> -->

  </data>
</odoo>
