<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_customer_document_list" model="ir.ui.view">
        <field name="name">uni.customer.document.list</field>
        <field name="model">uni.customer.document</field>
        <field name="arch" type="xml">
            <list>
                <field name="user_id"/>
                <field name="username"/>
                <field name="created_at"/>
                <field name="file"/>
                <field name="file_name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_customer_document_form" model="ir.ui.view">
        <field name="name">uni.customer.document.form</field>
        <field name="model">uni.customer.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="username"/>
                        <field name="created_at"/>
                        <field name="file" filename="file_name"/>
                        <field name="file_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_customer_document" model="ir.actions.act_window">
        <field name="name">Customer Documents</field>
        <field name="res_model">uni.customer.document</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>