<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_wallet_list" model="ir.ui.view">
            <field name="name">uni.wallet.list</field>
            <field name="model">uni.wallet</field>
            <field name="arch" type="xml">
                <list string="Wallets">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="currency"/>
                    <field name="state"/>
                    <field name="account_balance_id"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_wallet_form" model="ir.ui.view">
            <field name="name">uni.wallet.form</field>
            <field name="model">uni.wallet</field>
            <field name="arch" type="xml">
                <form string="Wallet">
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="currency"/>
                                <field name="state"/>
                                <field name="account_balance_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_wallet" model="ir.actions.act_window">
            <field name="name">Wallets</field>
            <field name="res_model">uni.wallet</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first wallet!
                </p>
            </field>
        </record>

        <!-- Menu -->
        
    </data>
</odoo>
