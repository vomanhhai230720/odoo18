<odoo>
    <!-- List View -->
    <record id="view_uni_trading_strategy_list" model="ir.ui.view">
        <field name="name">uni.trading.strategy.list</field>
        <field name="model">uni.trading.strategy</field>
        <field name="arch" type="xml">
            <list>
                <field name="profit"/>
                <field name="loss"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_uni_trading_strategy_form" model="ir.ui.view">
        <field name="name">uni.trading.strategy.form</field>
        <field name="model">uni.trading.strategy</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="profit"/>
                        <field name="loss"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_uni_trading_strategy" model="ir.actions.act_window">
        <field name="name">Trading Strategies</field>
        <field name="res_model">uni.trading.strategy</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>